{
	"name" : "pax/pax",
	"type" : "library",
	"description" : "PAX provides easy interacting between PHP and AJAX while it reduces at the same time written code in Javascript and improves the way of managing and manipulating DOM elements from the backend in an object oriented style.",
	"homepage": "https://github.com/paxphp/pax",
	"keywords" : [
		"php",
		"ajax",
		"xhr"
	],
	"license" : [
		"MIT"
	],
	"require" : {
		"php" : ">=5.4"
	},
	
	"suggest" : {
		"robloach/component-installer": "*",
		"components/jquery": ">=1.7",
		"fxp/composer-asset-plugin":"~1.0",
		"bower-asset/jquery-pax": "dev-master"
	},
	
	"autoload" : {
		"psr-4" : {
			"Pax\\" : ""
		}
	},

    "extra": {
       "branch-alias": {
            "dev-master": "1.0-dev"
       },
	   "component": {
	     "scripts": [
	       "jquery.pax.js"
	     ]
	   },
	   "asset-repositories": {
            "bower-asset/jquery-pax": {
                "type": "bower-vcs",
                "url": "https://github.com/paxphp/pax.git"
            }
        }
	 }
}
